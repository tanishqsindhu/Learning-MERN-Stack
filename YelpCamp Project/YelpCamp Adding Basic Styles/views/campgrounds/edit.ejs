<% layout('layouts/boilerplate') %>
    <h1>Edit the Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Name</label>
            <input type="text" id="title" name="campground[title]" value="<%=campground.title%>">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="text" id="price" name="campground[price]" value="<%=campground.price%>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%=campground.location%>">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="campground[description]" value="<%=campground.description%>">
        </div>
        <button>Update Campground</button>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
    <a href="/campgrounds">Back</a>
    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST"><button>Delete</button>
    </form>