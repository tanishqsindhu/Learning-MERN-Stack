<% layout('layouts/boilerplate') %>
    <h1>Create new Campground</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Name</label>
            <input type="text" id="title" name="campground[title]">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="text" id="price" name="campground[price]" placeholder="Price">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="campground[description]" placeholder="description">
        </div>
        <button>Add Campground</button>
    </form>
    <a href="/campgrounds">All Campgrounds</a>